{
    "name": "telegram-bot",
    "version": "0.0.22",
    "description": "telegram bot for furia e-sports",
    "main": "index.js",
    "scripts": {
        "start": "node src/index.js",
        "dev": "DEBUG=services:*,features:* nodemon src/index.ts",
        "lint": "eslint --fix src/**/*.ts",
        "prepare": "husky install",
        "postlint": "tsc --noEmit -p tsconfig.json",
        "format": "prettier --write src/**/*.ts package.json",
        "build": "tsc && cp -r src/contents build/src/contents"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Luanbian/telegram-bot.git"
    },
    "author": "Luan",
    "license": "ISC",
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/debug": "^4.1.12",
        "@types/express": "^5.0.1",
        "@types/node": "^22.15.0",
        "@types/node-telegram-bot-api": "^0.64.8",
        "@typescript-eslint/eslint-plugin": "^8.31.0",
        "@typescript-eslint/parser": "^8.31.0",
        "eslint": "^8.57.1",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-import": "^2.31.0",
        "husky": "^9.1.7",
        "nodemon": "^3.1.10",
        "ts-node": "^10.9.2",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "axios": "^1.9.0",
        "cors": "^2.8.5",
        "date-fns": "^4.1.0",
        "debug": "^4.4.0",
        "dedent": "^1.5.3",
        "dotenv": "^16.5.0",
        "express": "^5.1.0",
        "node-telegram-bot-api": "^0.66.0",
        "zod": "^3.24.3"
    },
    "nodemonConfig": {
        "watch": [
            "src/"
        ],
        "ignore": [
            ".git",
            "node_modules"
        ],
        "execMap": {
            "ts": "node --require ts-node/register"
        },
        "env": {}
    }
}
